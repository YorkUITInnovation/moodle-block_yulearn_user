<div id="block-yulearn-user-content" class="container-fluid">
    <div class="row">
        <div class="col">
            <div class="d-flex">
                <div class="mr-auto"></div>
                {{> block_yulearn_user/user_settings_menu}}
            </div>
            <div class="d-flex align-items-center justify-content-center"> 
                <div class="dropdown">
                    <a 
                        href="javascript:void();"
                        class="" 
                        type="button" 
                        id="dropdownMenuButton" 
                        data-toggle="dropdown" 
                        aria-haspopup="true" 
                        aria-expanded="false"

                        data-id="{{{id}}}">

                        <img src="{{{userImage}}}" class="rounded-circle" style="alignment-adjust: c" >
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                        <img src="{{{userImage}}}" class="rounded-circle" style="margin-left: 65px">

                        <div class="dropdown-item">{{#str}}name, local_yulearn{{/str}}: {{{fullName}}}</div> 

                        <div class="dropdown-item">{{#str}}phone, local_yulearn{{/str}}: {{{phone1}}}</div>

                        <div class="dropdown-item">{{#str}}email{{/str}}: {{{email}}}</div> 

                        <div class="dropdown-item">{{#str}}department, local_yulearn{{/str}}: {{{department}}}</div> 

                        <div class="dropdown-item">{{#str}}position, local_yulearn {{/str}}: {{{position}}}</div> 

                        {{#teams}}
                        <div class="dropdown-item">{{#str}}team, local_yulearn{{/str}}: {{{name}}}</div> 
                        <div class="dropdown-item">{{#str}}team_leader, local_yulearn{{/str}}: {{{lead}}}</div> 
                        {{/teams}}

                        {{#teammembers}}
                        <div class="dropdown-item">{{#str}}team_members, local_yulearn{{/str}}: {{{firstname}}}, {{{lastname}}}</div> 
                        {{/teammembers}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="d-flex align-items-center justify-content-center">
                <h4>{{{fullName}}}</h4>
            </div>
        </div>
    </div>



    <div class="row">
        <div class="col">
            <div class="d-flex align-items-center justify-content-center department-title">
                <span style="font-size: 0.8em">{{{department}}}</span>
            </div>
        </div>
    </div>

    <!--</div>-->
    <div class="row">
        <div class="col">
            <hr>
        </div>
    </div>
    <div class="row">
        <div class="col section-header">
            {{#str}}teams, local_yulearn{{/str}}
        </div>
    </div>
    {{#teams}}
    <div class="row mt-2">
        <div class="col">
            <span class="team-name">{{{name}}}</span><br>
            <span class="manager-title">{{#str}}managed_by, local_yulearn{{/str}}: {{{lead}}}</span>
        </div>
    </div>

    <div class="row mt-2">
        <div class="container">
            {{#teammembers}}
            {{#rows}}
            <div class="row mt-1">
                {{#members}}
                <div class="col-md-3 col-sm-12">
                    <div class="dropright">
                        <a 
                            href="javascript:void();"
                            class="" 
                            type="button" 
                            id="dropdownMenuButton" 
                            data-toggle="dropdown" 
                            aria-haspopup="true" 
                            aria-expanded="false"

                            data-id="{{{id}}}">
                            <img src="{{{profileimageurlsmall}}}" class="rounded-circle mx-auto d-block" title="{{{firstname}}} {{{lastname}}}">
                        </a>
                        <div style="font-size: 0.7em">
                            {{{firstname}}} {{{lastname}}}
                        </div>

                        <div class="shadow-lg dropdown-menu dropdown-menu-right rounded" aria-labelledby="dropdownMenuButton" style="min-width: 300px; max-width: 900px;">
                            <img src="{{{profileimageurl}}}" class="rounded-circle"  style="margin-left: 70px">
                            <div class="dropdown-item"><strong>{{#str}}name, local_yulearn {{/str}}</strong>: {{{firstname}}} {{{lastname}}}</div> 

                            <div class="dropdown-item"><strong>{{#str}}email{{/str}}</strong>: {{{email}}}</div> 

                            <div class="dropdown-item"><strong>{{#str}}phone, local_yulearn{{/str}}</strong>: {{{phone1}}}</div>

                            <div class="dropdown-item"><strong>{{#str}}department, local_yulearn{{/str}}</strong>: {{{department}}}</div> 

                            <div class="dropdown-item"><strong>{{#str}}position, local_yulearn{{/str}}</strong>: {{{position}}}</div> 

                            {{#teams}}
                            <div class="dropdown-item"><strong>{{#str}}team, local_yulearn{{/str}}</strong>: {{{name}}}</div> 
                            <div class="dropdown-item text-wrap"><strong>{{#str}}team_leader, local_yulearn{{/str}}</strong>: {{{lead}}}</div> 
                            {{/teams}}

                            <div class="dropdown-divider"></div>

                        </div>
                    </div>
                </div>
                {{/members}}
            </div>
            {{/rows}}
            {{/teammembers}}        
        </div>
    </div>
    {{/teams}}
    <div class="row">
        <div class="col">
            <hr>
        </div>
    </div>
    <div class="row">
        <div class="col section-header">
            {{#str}}my_certificates, block_yulearn_user{{/str}}
        </div>
    </div>
</div>